#create the program to sum numbers
def sumN(n):
    #set an initial value
    total = 0
    
    #number of times to loop the program
    for i in range(n): #adds the usernumber to the range
        total += i+1
    return total # retuns the total
    
#create the program for cubing numbers
def sumNCubes(n):
    total = 0
    #number of times to loop the program
    for x in range(n):
        total += (x+1)**3 #cubes the number
    return total  # return total
    
def main():
    #introduce program
    print("Return the sum of natural numbers") 
    
    #get the number of numbers to sum from the user
    n = int(input("How many numbers do you want to sum? "))
    
    # call the function sumN() with parameter n and assign result to nSum
    nSum =sumN(n) 
    print("The sum of the first numbers is " +str(nSum))
    
     # call the function sumNCubes() with parameter n assigned to nCubedSum
    nCubedSum = sumNCubes(n)
    print("The sum of their cubes is " +str(nCubedSum))
    
main()
